<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

	<f:Form editable="false">
		<f:layout>
			<f:ResponsiveGridLayout
				labelSpanXL="4"
				labelSpanL="3"
				labelSpanM="4"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="0"
				emptySpanL="4"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="2"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false" />
		</f:layout>
		<f:formContainers>
			<f:FormContainer>
				<f:formElements>
					<f:FormElement label="Title">
						<f:fields>
							<Text text="{person>/title}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="First Name">
						<f:fields>
							<Text text="{person>/firstName}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Last Name">
						<f:fields>
							<Text text="{person>/lastName}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Email Address">
						<f:fields>
							<Text text="{person>/emailAddress}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Created Date">
						<f:fields>
							<Text text="{person>/createdDate}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Last Modified Date">
						<f:fields>
							<Text text="{person>/lastModifiedDate}" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>

</core:FragmentDefinition>